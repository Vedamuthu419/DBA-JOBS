</font>';



    
EXEC msdb.dbo.sp_send_dbmail                                    
 @profile_name = @MailProfile,                       
 @recipients=@MailID,                                   
 @subject = @strSubject,                                   
 @body = @TableHTML,                                      
 @body_format = 'HTML' ;                               
  
  
DROP TABLE  #RebootDetails;    
