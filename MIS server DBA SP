         ) + 
         '</b></font></td>'  
       ELSE  
         '<td><font face="Verdana" size="1">' + 
         ISNULL(
           CASE 
             WHEN CHARINDEX('.', LogSpaceUsed_Percent) > 0 
             THEN SUBSTRING(LogSpaceUsed_Percent, 1, CHARINDEX('.', LogSpaceUsed_Percent) - 1) 
             ELSE LogSpaceUsed_Percent 
           END, ''
         ) + 
         '</font></td>'   
   END +                                     
 '</tr>'                               
FROM                                   
 #LogSpace;
  
 
 /*****Failed Jobs in Last 24Hrs*********/
 
